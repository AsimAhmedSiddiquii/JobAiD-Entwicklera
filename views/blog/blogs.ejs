<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<title>Blogs | AiD</title>

	<link href="/css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
	<div class="main">
		<nav class="navbar navbar-expand navbar-light navbar-bg">
			<a class="sidebar-toggle js-sidebar-toggle">
				<h1>Motivational Blogs</h1>
			</a>

			<div class="navbar-collapse collapse">
				<ul class="navbar-nav navbar-align">
					<li class="nav-item dropdown">
						<a role="button" class="nav-icon dropdown-toggle" onclick="adjust(18)"
							id="alertsDropdown" data-bs-toggle="dropdown">
							<div class="position-relative">
								<i class="fa fa-search-minus" style="font-size: xx-large;" aria-hidden="true"></i>
							</div>
						</a>
					</li>
					<li class="nav-item dropdown">
						<a role="button" class="nav-icon dropdown-toggle" onclick="adjust(20)"
							id="alertsDropdown" data-bs-toggle="dropdown">
							<div class="position-relative">
								<i class="fa fa-window-restore" style="font-size: xx-large;" aria-hidden="true"></i>
							</div>
						</a>
					</li>
					<li class="nav-item dropdown">
						<a role="button" class="nav-icon dropdown-toggle" onclick="adjust(22)"
							id="alertsDropdown" data-bs-toggle="dropdown">
							<div class="position-relative">
								<i class="fa fa-search-plus" style="font-size: xx-large;" aria-hidden="true"></i>
							</div>
						</a>
					</li>
					
					<li class="nav-item dropdown">
					
						<a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="/logout" >
							<span class="text-dark">Logout</span>
						</a>
						
					</li>
				</ul>
			</div>
		</nav>
		<div class="container">
			<!-- 1st Row -->
			<div class="row">
				<!-- Raw Materials Card -->
				<div class="col-md-12">
					<div class="card mt-3">
						<div class="card-body">
							<h2 id="blogTitle" class="text-center mt-2 font-white">Entwicklera</h2>
							<h4 id="desc" class="text-justify mt-4 mb-4 ms-4 me-4 font-white"
								style="line-height: 1.6; text-align: justify;"></h4>
							<div class="col-4" style="float: right;">
								<button id="nextBtn" type="submit" onclick="next()" class="btn btn-primary mb-4 text-center">Next
									&#8594</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="/js/app.js"></script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
		integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
		integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
		integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
		crossorigin="anonymous"></script>
</body>

<script>
	function ObjectId() { };
	var index = 0
	var data = [<%- blogData %>];

	setData();

	function setData() {
		document.getElementById('blogTitle').innerText = data[index].title;
		document.getElementById('desc').innerText = data[index].text;
	}


	function next() {
		if (index < data.length - 1) {
			index += 1
			setData()
		} else {
			index = 0
			setData()
		}
	} 

	function adjust(size) {
		document.getElementById('blogTitle').style.fontSize = size + "px";
		document.getElementById('desc').style.fontSize = size + "px";
		document.getElementById('nextBtn').style.fontSize = size + "px";
	}
</script>

</html>