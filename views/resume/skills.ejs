<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	
	<title>Skills | AiD</title>

	<link href="/css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
	<main class="d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Resume</h1>
							<p class="lead">
								Skills
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form>
										<div class="mb-3">
											<label class="form-label">Skills</label>
											<input class="form-control form-control-lg" type="text" id="skill" name="skill" placeholder="Enter skill" />
											<input class="form-control form-control-lg" type="hidden" id="skills" name="skills" />
										</div>
										<div class="mt-3">
											<button type="button" onclick="addSkills()" style="float: left;" class="btn btn-lg btn-outline-primary">Add Skill &nbsp; <i class="fa fa-plus" aria-hidden="true"></i></a>
											<button type="submit" style="float: right;" class="btn btn-lg btn-primary">Next &nbsp; <i class="fa fa-caret-right" aria-hidden="true"></i></a>
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>

	<script src="/js/app.js"></script>
	<script>
		var skills = [];
		function addSkills() {
			skills.push(document.getElementById('skill').value);
			document.getElementById('skills').value = skills;
			document.getElementById('skill').value = "";
			document.getElementById('skill').focus();

		}
	</script>
</body>

</html>